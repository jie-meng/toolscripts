#!/bin/bash
# Code Review Staged - Prompt for language selection and execute staged code review

# Color codes
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}Code Review (Staged Changes)${NC}"
echo ""
echo "Please select the review language:"
echo "1. English (en)"
echo "2. 中文 (zh-cn)"
echo ""
read -p "Select (Default 1): " choice

# Default to English if user presses Enter
choice=${choice:-1}

case $choice in
    1)
        echo -e "${GREEN}Starting staged code review in English...${NC}"
        iflow -p "Please review staged changes"
        ;;
    2)
        echo -e "${GREEN}开始暂存区代码审查（中文）...${NC}"
        iflow -p "请审查暂存区的代码"
        ;;
    *)
        echo -e "${RED}Invalid selection. Defaulting to English...${NC}"
        iflow -p "Please review staged changes"
        ;;
esac
